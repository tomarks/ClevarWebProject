@page
@model ClevarWeb.PeopleDetailsModel

@{
    ViewData["Title"] = "PeopleDetails";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@section Scripts {
    <script src="~/lib/swiper/js/swiper.min.js"></script>
    <script src="~/js/cartoonCarouselPartial.js"></script>
}
@section HTMLHead {
    <link rel="stylesheet" href="~/lib/swiper/css/swiper.min.css">
    <link href="~/css/cartoonCarouselPartial.css?rev=@SystemProperties.Instance.Revision" type="text/css" rel="stylesheet" />
    <link href="~/css/cartoonCarouselPartial.animations.css?rev=@SystemProperties.Instance.Revision" type="text/css" rel="stylesheet" />
}

<div style="height:200px"></div>

<div>
    <partial name="_CartoonCarouselPartial" model="Model.People" />
</div>


<div style="height:200px;text-align:center">
    @if (!Model.Person.IsActive)
    {
        <form method="post" asp-page-handler="PublishPerson">
            <button type="submit" name="PersonId" value=@Model.Person.Id>
                Make @Model.Person.Name active?
            </button>
        </form>
        <code>This will display @Model.Person.Name on the public website.</code>
    }
</div>

<div style="height:100px;text-align:center">
    <a asp-page="./Edit" asp-route-id="@Model.Person.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>

</div>

